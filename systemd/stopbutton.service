[Unit]
Description=Google Assistant
Wants=network-online.target
After=network-online.target


[Service]
Environment=VIRTUAL_ENV=/home/osmc/env
Environment=PATH=/home/osmc/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/osmc/env/bin/python -u /home/osmc/GassistPi/src/stopbutton.py
WorkingDirectory=/home/osmc/
StandardOutput=inherit
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
